{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "module": "ES2022",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true
  },
  "ts-node": {
    "esm": true,
    "files": true
  },
  "include": ["./src/**/*.ts", "./env.d.ts"]
}
